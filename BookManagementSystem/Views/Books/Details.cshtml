@model BookManagementSystem.Models.Book

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Book Infromation</h1>

<div class="row">
    <!-- Left column: Details -->
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Author)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Author)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Genre)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Genre)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.PublishedYear)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.PublishedYear)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-8">
                $@Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.DiscountPercentage)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.DiscountPercentage)% Off
            </dd>
            <dt class="col-sm-4">
                Price After Discount
            </dt>
            <dd class="col-sm-8">
                $@((double)Model.Price - ((double)Model.Price * Model.DiscountPercentage / 100))
            </dd>
        </dl>
    </div>

    <!-- Right column: Image -->
    <div class="col-md-4 text-center">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Url.Content(Model.ImageUrl)" alt="@Model.Title Cover" class="img-fluid rounded shadow-sm" style="max-width: 100%; height: auto;" />
        }
        else
        {
            <p class="text-muted">No image available.</p>
        }
    </div>
</div>

<!-- Buttons -->
<div class="row mt-4">
    <div class="col-6 col-md-3">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary border form-control">Edit</a>
    </div>
    <div class="col-6 col-md-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary border form-control">Back</a>
    </div>
</div>
